<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cn.edu.bistu.cs.se.c2.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView android:id="@+id/tip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:text="开始计算！"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView android:id="@+id/T"
        android:layout_width="45sp"
        android:layout_height="wrap_content"
        android:text="提示："
        android:layout_alignBaseline="@+id/tip"
        android:layout_alignBottom="@+id/tip"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="-15dp">

        <TableRow>
            <Button
                android:id="@+id/ln"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ln"
                android:textSize="15dp"
                android:allowUndo="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mc"
                android:text="MC"
                android:textSize="15dp" />

            <Button android:id="@+id/bksp"
                android:text="B"
                android:layout_width="65sp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#0cf21b"
                android:textStyle="bold" />

            <Button
                android:id="@+id/c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textColor="#0cf21b"
                android:textStyle="bold"
                android:textSize="20dp" />
            <!-- 退格键 -->
        </TableRow>


        <TableRow android:layout_marginLeft="45dp">
            <Button android:id="@+id/tan"
                android:text="tan"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textSize="15dp" />
            <Button android:id="@+id/cos"
                android:text="cos"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textSize="15dp" />
            <Button android:id="@+id/sin"
                android:text="sin"
                android:layout_width="65sp"
                android:layout_height="wrap_content"
                android:textSize="15dp" />
            <!-- 退格键 -->
        </TableRow>


        <TableRow>
            <!-- 左括号 -->
            <Button android:id="@+id/left"
                android:text="("
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="15dp"
                android:textStyle="bold" />
            <!-- 右括号 -->
            <Button android:id="@+id/right"
                android:text=")"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="15dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="log"
                android:textSize="15dp" />
            <Button
                android:id="@+id/factorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="n!"
                android:textSize="15dp" />
            <!-- 退格键 -->
        </TableRow>


        <TableRow>
            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textColor="#e80808"
                android:textStyle="bold|italic"
                android:textSize="20dp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="#e80808"
                android:textStyle="bold|italic"
                android:textSize="20dp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="#e80808"
                android:textStyle="bold|italic"
                android:textSize="20dp" />

            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#1c0df3" />
            <!-- 退格键 -->
        </TableRow>


        <TableRow>
            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="#e80808"
                android:textStyle="bold|italic"
                android:textSize="20dp" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="#e80808"
                android:textStyle="bold|italic"
                android:textSize="20dp" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="#e80808"
                android:textStyle="bold|italic"
                android:textSize="20dp" />

            <Button
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#1c0df3" />
        </TableRow>


        <TableRow>
            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#e80808"
                android:textStyle="bold|italic"
                android:textSize="20dp" />

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#e80808"
                android:textStyle="bold|italic"
                android:textSize="20dp" />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#e80808"
                android:textStyle="bold|italic"
                android:textSize="20dp" />

            <Button
                android:id="@+id/mul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="×"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#1c0df3" />
        </TableRow>


        <TableRow>
            <Button
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#e80808"
                android:textStyle="bold|italic"
                android:textSize="20dp" />

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="20dp" />

            <Button
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="÷"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#1c0df3" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:cursorVisible="false"
        android:text="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <TextView
        android:id="@+id/mem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_alignParentStart="true" />

</RelativeLayout>
