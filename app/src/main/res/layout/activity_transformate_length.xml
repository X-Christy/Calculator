<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_transformate_length"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.edu.bistu.cs.se.c2.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:textSize="25dp"
        android:text="长度单位转换器"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="米"
                android:textColor="#2926f6" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_m"
                android:maxLength="30" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转换"
                android:id="@+id/btn_m" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="里"
                android:textColor="#2926f6" />

            <EditText

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_li" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转换"
                android:id="@+id/btn_li" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="丈"
                android:textColor="#2926f6" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_zhang" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转换"
                android:id="@+id/btn_zhang" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尺"
                android:textColor="#2926f6" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_chi" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转换"
                android:id="@+id/btn_chi" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="寸"
                android:textColor="#2926f6" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_cun" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转换"
                android:id="@+id/btn_cun" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"
                android:textColor="#2926f6" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_fen" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转换"
                android:id="@+id/btn_fen" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英里"
                android:textColor="#2926f6" />

            <EditText
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_mile" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转换"
                android:id="@+id/btn_mile" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英尺"
                android:textColor="#2926f6" />

            <EditText
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_foot" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转换"
                android:id="@+id/btn_foot" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英寸"
                android:textColor="#2926f6" />

            <EditText
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_inch" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转换"
                android:id="@+id/btn_inch" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clear2"
                android:text="重置"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#f2700c"
                android:textStyle="bold"
                android:layout_marginLeft="70dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/returnn"
                android:text="返回计算器"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#f2700c"
                android:layout_marginLeft="20dp" />
        </TableRow>

    </LinearLayout>

</TableLayout>
